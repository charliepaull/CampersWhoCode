<h1>Employer Job Submission</h1>

<h2>Please fill out the job form below for fellow Bootcampers to see!</h2>

<div>
    <form>
        {{!-- Job Title input --}}
        <div class="form-group">
            <div class="col-md-8">
                <label for="validationServer01">Job Title</label>
                <input type="text" class="form-control is-valid" id="validationServer01" placeholder="Job Title" value="What's the job title?"
                    required>
                <div class="valid-feedback"></div>
            </div>
        </div>
        {{!-- Employer name input --}}
        <div class="form-group">
            <div class="col-md-8">
                <label for="validationServer02">Employer</label>
                <input type="text" class="form-control is-valid" id="validationServer02" placeholder="Employer" value="What's your or the company's name?"
                    required>
                <div class="valid-feedback"></div>
            </div>
        </div>
        <div>
            {{!-- here needs to go the user avatar component: employer_picture --}}
        </div>

        {{!-- line break tag --}}
        <hr>
        {{!-- Job Type input --}}
        <div class="form-group">
            <div class="col-md-8">
                <label for="validationServer03">Job Type</label>
                <input type="text" class="form-control is-valid" id="validationServer03" placeholder="Job Type" value="What type of work do you need? Ex: front-end landing page site."
                    required>
                <div class="valid-feedback"></div>
            </div>
        </div>

        {{!-- Job Description text box --}}
        <div class="form-group">
            <label for="validationServer04">Job Description</label>
            <textarea class="form-control is-valid" id="validationServer04" placeholder="Job Description" rows="50"
                value="Describe the job." required></textarea>
            <div class="valid-feedback"></div>
        </div>

        {{!-- line break tag --}}
        <hr>

        {{!-- Bootcamper pricing --}}
        <div class="form-row">
            {{!-- Beginner price input --}}
            <div class="col-md-4 mb-3">
                <label for="validationServer05">Beginner Bootcamper Price</label>
                <input type="number" step="0.01" min="0" class="form-control is-invalid" id="validationServer05"
                    placeholder="beginner amount" value="Your cost for beginner-skilled Bootcamper." required>
                <div class="invalid-feedback"></div>
            </div>
            {{!-- Intermediate price input --}}
            <div class="col-md-4 mb-3">
                <label for="validationServer06">Intermediate Bootcamper Price</label>
                <input type="number" step="0.01" min="0" class="form-control is-invalid" id="validationServer06"
                    placeholder="intermediate amount" value="Your cost for an intermediate-skilled Bootcamper."
                    required>
                <div class="invalid-feedback"></div>
            </div>
            {{!-- Advanced price input --}}
            <div class="col-md-4 mb-3">
                <label for="validationServer07">Advanced Bootcamper Price</label>
                <input type="number" step="0.01" min="0" class="form-control is-invalid" id="validationServer07"
                    placeholder="advanced amount" value="Your cost for an advanced-skilled Bootcamper." required>
                <div class="invalid-feedback"></div>
            </div>
        </div>

        {{!-- Employer Contact Info --}}
        {{!-- Employer Email input --}}
        <div class="form-row">
            <div class="col-md-6 mb-2">
                <label for="validationServer08">Employer Email</label>
                <input type="text" class="form-control is-invalid" id="validationServer08" placeholder="email" value="Employer email"
                    required>
                <div class="invalid-feedback"></div>
            </div>
            {{!-- Employer Phone # input --}}
            <div class="col-md-6 mb-2">
                <label for="validationServer09">Employer Phone</label>
                <input type="text" class="form-control is-invalid" id="validationServer09" placeholder="phone" value="Employer phone #"
                    required>
                <div class="invalid-feedback"></div>
            </div>
        </div>
        <div class="form-row">
            {{!-- Employer LinkedIn profile input --}}
            {{!-- NOTE: find out way to make this a hyperlink. --}}
            <div class="col-md-6 mb-2">
                <label for="validationServer10">Employer LinkedIn</label>
                <input type="text" class="form-control is-invalid" id="validationServer10" placeholder="LinkedIn" value="Employer LinkedIn link">
                <div class="invalid-feedback"></div>
            </div>
            {{!-- Employer site link input --}}
            {{!-- NOTE: find out way to make this a hyperlink. --}}
            <div class="col-md-6 mb-2">
                <label for="validationServer11">Employer Site</label>
                <input type="text" class="form-control is-invalid" id="validationServer11" placeholder="site" value="Employer site">
                <div class="invalid-feedback"></div>
            </div>
        </div>

</div>
</form>
</div>


